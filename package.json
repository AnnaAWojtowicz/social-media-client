{
  "name": "css-frameworks-ca",
  "version": "0.0.12",
  "description": "social media test",
  "type": "module",
  "main": "src/js/index.js",
  "scripts": {
    "test": "npm run test-unit",
    "test-unit": "jest",
    "test-cypress": "npm run test-e2e",
    "localhost-cypress": "start-server-and-test start http://127.0.0.1:8080 test-cypress",
    "test-e2e": "cypress open",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "format": "prettier -w src/**/*.js",
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "prepare": "husky install"
  },
  "keywords": [
    "social media"
  ],
  "author": "Noroff & AAWojtowicz",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "cypress": "^13.4.0",
    "cypress-dotenv": "^2.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.53.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "live-server": "^1.2.2",
    "prettier": "^3.0.3",
    "sass": "^1.54.8",
    "start-server-and-test": "^2.0.2"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  }
}
